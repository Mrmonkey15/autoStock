<%- include("../partials/header")%>
<%- include("../partials/sidebar")%>

<main class="bg-secondary-subtle w-100 d-flex flex-column justify-content-center align-items-center">
    <div class="d-flex flex-column  align-items-center card p-4  rounded-4 bg-body-tertiary
    " >
        <h2 class="text-danger fw-bold fs-3" >Cadastro de Novo Veículo</h2>
        <form action="" class=" container card-body" >
            <label for="plate" class="form-label">Placa</label>
            <input type="text" class="form-control mb-3" required>

            <!-- gerado dinamico  -->
            <label for="" class="form-label" >Marca</label>
            <select class="form-select mb-3">
                <option class="bg-danger-subtle">Nissan</option>
            </select>    
            <!-- está parte será gerada de forma dinâmica -->

            <label class="form-label" >Modelo</label>
            <input type="text"class="form-control mb-3" name="model"> 
            <label class="form-label">Categoria</label>
            <select name="category"  class="form-select">
                <option value="" class="bg-danger-subtle">Escolha uma categoria</option>
                <option value="sedan" class="bg-danger-subtle">Sedan</option>
                <option value="SUV" class="bg-danger-subtle">SUV</option>
                <option value="hatchback" class="bg-danger-subtle">Hatchback</option>
                <option value="utilitario" class="bg-danger-subtle">Utilitário</option>
                <option value="conversivel" class="bg-danger-subtle">Conversível</option>
                <option value="picape" class="bg-danger-subtle">Picape</option>
                <option value="van" class="bg-danger-subtle">Van</option>
                <option value="eletrico" class="bg-danger-subtle">Elétrico</option>
            </select>
            <div class="d-flex mt-3 mb-3 alig">
                <div class="d-flex gap-2 align-items-center">
                <label class="form-label">Ano:</label>
                <input type="number"class="form-control w-50" name="year">
                </div>
                <div class="d-flex gap-2 align-items-center">
                <label class="form-label">Km: </label>
                <input type="number" class="form-control w-50" name="kilometers">  
                </div>
            </div>
            <label class="form-label">Valor de Aquisição</label>
            <input type="number" class="form-control mb-3" placeholder="R$ 10.0000,00" name="purchasePrice"> 
            <label class="form-label">Valor de Mercado</label>
            <input type="number" class="form-control mb-3" placeholder="R$ 10.0000,00" name="marketPrice"> 
            <div class="d-flex flex-column align-items-center justify-content-center gap-4">
                <input type="submit" value="Cadastrar" class="btn btn-lg btn-danger m-auto">
                <p class="mt-2"><a href="#" class="link-danger link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"> <i class="fa-solid fa-list "></i> Ver Lista de veículos </a></p>
            </div>
        

        </form>
     
      
    </div>
</main>



<%- include("../partials/footer")%>